# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dealics_db
DB_USER=root
DB_PASSWORD=

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@dealics.com

# Frontend URL (for email links)
FRONTEND_URL=""

# PayPal Configuration
PAYPAL_SANDBOX=true
PAYPAL_SANDBOX_URL=https://www.sandbox.paypal.com/cgi-bin/webscr
PAYPAL_LIVE_URL=https://www.paypal.com/cgi-bin/webscr
PAYPAL_RETURN_URL=http://localhost:3000/feed-paypal-payment-buysell/thanks
PAYPAL_CANCEL_URL=http://localhost:3000/feed-paypal-payment-buysell/cancel
PAYPAL_NOTIFY_URL=http://localhost:3000/notify/feed-paypal-payment-buysell

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# PM2
PM2_INSTANCES=1
PM2_EXEC_MODE=cluster

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

