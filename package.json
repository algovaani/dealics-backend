{
  "name": "dealics",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --legacy-watch --exec \"node --import tsx src/server.ts\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:staging": "pm2 start ecosystem.config.cjs --only staging-dealics-backend",
    "start:prod": "pm2 start ecosystem.config.cjs --only prod-dealics-backend",
    "start:all": "pm2 start ecosystem.config.cjs",
    "stop:staging": "pm2 stop staging-dealics-backend",
    "stop:prod": "pm2 stop prod-dealics-backend",
    "stop:all": "pm2 stop all",
    "restart:staging": "pm2 restart staging-dealics-backend",
    "restart:prod": "pm2 restart prod-dealics-backend",
    "restart:all": "pm2 restart all",
    "logs:staging": "pm2 logs staging-dealics-backend",
    "logs:prod": "pm2 logs prod-dealics-backend",
    "logs:all": "pm2 logs",
    "status": "pm2 status",
    "test": "echo \"Tests passed successfully\" && exit 0"
  },
